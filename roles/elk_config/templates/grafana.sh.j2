# Optional script to run if you want to use Grafana.

if [ -f /etc/redhat-release ]; then
  setenforce 0
  cd /data
  wget https://dl.grafana.com/oss/release/grafana-7.5.4-1.x86_64.rpm
  sudo yum install grafana-7.5.4-1.x86_64.rpm -y
#  wget https://s3-us-west-2.amazonaws.com/grafana-releases/release/grafana-5.1.4-1.x86_64.rpm
#  sudo yum install grafana-5.1.4-1.x86_64.rpm
  systemctl enable grafana-server
  systemctl daemon-reload
  systemctl start grafana-server
  systemctl status grafana-server
else
  cd /data
  wget https://dl.grafana.com/oss/release/grafana_7.5.4_amd64.deb
  sudo apt-get install -y adduser libfontconfig
  sudo dpkg -i grafana_7.5.4_amd64.deb
#  wget https://s3-us-west-2.amazonaws.com/grafana-releases/release/grafana_5.1.4_amd64.deb
#  sudo dpkg -i grafana_5.1.4_amd64.deb
  systemctl enable grafana-server
  systemctl daemon-reload
  systemctl start grafana-server
  systemctl status grafana-server
fi
